			DECLARE @org_id int = (
			SELECT
				ID
			FROM
				ORGANISATION where SHORTNAME = 'st-cz')
			INSERT
				INTO
				ORGANISATION_COLLECTION (
				NAME,
				AFFILIATE_ID,
				DESCRIPTION,
				SHORTNAME)
			VALUES(
			N'Stakis',
			@org_id,
			N'Description',
			N'eh-cz')
			END;
		</sql>
	</changeSet>
	
