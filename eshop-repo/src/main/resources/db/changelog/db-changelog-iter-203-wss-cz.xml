	<changeSet author="CONNECT_APP" id="ITER_203_INSERT_EH_PORTAL_URL_SETTING_ST_CZ">
	    <sql>
			DECLARE @st_cz_coll_id INT = (SELECT ID FROM ORGANISATION_COLLECTION WHERE SHORTNAME = 'st-cz')
			IF EXISTS (SELECT 1 FROM ORG_COLLECTION_SETTINGS
				WHERE
					SETTING_KEY = 'eh_portal_url' AND COLLECTION_ID = @st_cz_coll_id)
			BEGIN
				UPDATE ORG_COLLECTION_SETTINGS SET SETTING_VALUE = N'https://cz.bbv-demo.ch/eh-st-cz/'
				WHERE COLLECTION_ID = @st_cz_coll_id AND SETTING_KEY = 'eh_portal_url'
			END
			ELSE
			BEGIN  
				INSERT INTO ORG_COLLECTION_SETTINGS ( COLLECTION_ID, SETTING_KEY, SETTING_VALUE) VALUES(@st_cz_coll_id, N'eh_portal_url', N'https://cz.bbv-demo.ch/eh-st-cz/')
			END
	    </sql>
  </changeSet>
  
